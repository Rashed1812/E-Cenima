<nav class="navbar navbar-expand-lg sticky-top">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <img class="cine-logo" src="/Images/EZLogo.png" alt="CineMagic Logo" >
        </a>

        <!-- Mobile Toggle Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <i class="bi bi-list" style="font-size: 2.5rem; color: var(--accent-color);"></i>
        </button>

        <!-- Navigation Links -->
        <div class="collapse navbar-collapse" id="navbarContent">


            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                    <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString()?.ToLower() == "home") ? "active" : "")" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-film me-1"></i> Movies
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @((ViewContext.RouteData.Values["Controller"]?.ToString()?.ToLower() == "actor") ? "active" : "")" asp-controller="actor" asp-action="Index">
                        <i class="fas fa-users me-1"></i> Actors
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link  @((ViewContext.RouteData.Values["Controller"]?.ToString()?.ToLower() == "cinema") ? "active" : "")" asp-controller="cinema" asp-action="Index">
                        <i class="fas fa-theater-masks me-1"></i> Cinemas
                    </a>
                </li>
            </ul>
            }

            <!-- Right-side Icons -->
            <div class="d-flex align-items-center">
                <!-- Favorites Icon with Badge -->
                <a href="#" class="nav-link favorite-icon position-relative me-3">
                    <i class="fas fa-heart"></i>
                    <span id="FavouriteMovie" class="favorite-count">0</span>
                </a>

                <!-- Theme Toggle -->
                <div class="theme-toggle nav-link" id="themeToggle">
                    <i class="fas fa-sun"></i>
                </div>

                <!-- Links -->
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    </div>

                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="RegisterUser">Register</a>
                    </div>
                }
                else
                {
                    <div class="nav-item">
                        <span class="nav-link">Welcome, @User.Identity.Name</span>
                    </div>
                    <div class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-link nav-link" style="padding: 0;">Logout</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</nav>


<style>
    .cine-logo {
        transition: transform 0.3s ease; /* Smooth hover effect */
    }

        .cine-logo:hover {
            transform: scale(1.05); /* Slight zoom on hover */
        }


    .navbar {
        background-color: var(--secondary-color) !important;
        border-bottom: 3px solid var(--primary-color);
    }

    .navbar-brand img {
        height: 40px;
    }

    .navbar-toggler-icon {
        background-image: none !important;
    }

    
    .nav-link {
        color: var(--accent-color) !important;
        font-weight: 500;
        margin: 0 10px;
        transition: all 0.3s ease;
    }

        .nav-link:hover {
            color: var(--primary-color) !important;
            transform: scale(1.05);
        }

    .active {
        color: #e50914 !important;
        font-weight: bold;
    }

    .theme-toggle {
        cursor: pointer;
        font-size: 1.2rem;
        transition: all 0.3s ease;
    }

        .theme-toggle:hover {
            transform: scale(1.1);
        }

    .favorite-icon {
        position: relative;
    }

    .favorite-count {
        position: absolute;
        top: -5px;
        right: -10px;
        background: var(--primary-color);
        color: white;
        border-radius: 50%;
        width: 18px;
        height: 18px;
        font-size: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    [data-bs-theme="light"] {
        --secondary-color: #f8f9fa;
        --accent-color: #212529;
        --dark-bg: #ffffff;
        --light-bg: #141414;
        --text-primary: #221f1f;
        --text-secondary: #555555;
        --card-bg: #ffffff;
    }

            [data-bs-theme="light"] .navbar {
                background-color: var(--secondary-color) !important;
                border-bottom: 3px solid var(--primary-color);
            }

            [data-bs-theme="light"] .nav-link {
                color: var(--accent-color) !important;
            }

        [data-bs-theme="light"] .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%23ffffff' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e") !important;
        }
    </style>

<script>
    function updateFavoriteCount() {
         const favoriteCountElement = document.getElementById('FavouriteMovie');
         const favorites = JSON.parse(localStorage.getItem('favoriteMovies') || '[]');
         if (favoriteCountElement) {
             favoriteCountElement.textContent = favorites.length;
         }
     }

     document.addEventListener('DOMContentLoaded', () => {
         updateFavoriteCount(); // Initial update
     });

     // Listen for same-page updates
     window.addEventListener('favoriteUpdated', () => {
         updateFavoriteCount();
     });

     // Listen for cross-tab updates
     window.addEventListener('storage', (event) => {
         if (event.key === 'favoriteMovies') {
             updateFavoriteCount();
         }
     });
</script>