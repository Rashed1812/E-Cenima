@model E_Cenima.Models.User.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4" style="background-color: black; color: white; border: 2px solid red;">
                <div class="card-header text-center" style="background-color: red; color: white; border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
                    <h3 class="mb-0">Register</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label text-white"></label>
                            <input asp-for="FirstName" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label text-white"></label>
                            <input asp-for="LastName" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label text-white"></label>
                            <input asp-for="UserName" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-white"></label>
                            <input asp-for="Email" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-white"></label>
                            <input asp-for="Password" type="password" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label text-white"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <input type="submit" value="Register" class="btn btn-danger btn-lg rounded-3" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center" style="background-color: black;">
                    <a asp-action="Login" class="text-danger text-decoration-none">← Back to LogIn</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
