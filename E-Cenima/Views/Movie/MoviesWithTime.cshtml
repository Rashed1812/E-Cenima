    }

    .movie-poster {
        width: 100%;
        height: 100%;
        display: block;
    }

    .movie-info-container {
        flex: 1;
        min-width: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .movie-title {
        font-size: 2.5rem;
        margin: 0 0 1rem;
        color: var(--text-primary);
        line-height: 1.2;
    }

    .movie-meta {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        margin-bottom: 1.5rem;
        color: var(--text-primary);
        font-size: 1.1rem;
    }

   

    .movie-description {
        font-size: 1.1rem;
