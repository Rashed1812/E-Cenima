        height: 350px;
    }

    }

   

    .cinemas-container {
        grid-template-columns: 1fr;
    }

    .section-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }

    .trailer-container iframe {
        height: 250px;
    }

    }
</style>


