@model ICollection<ActorDto>

@{
    ViewData["Title"] = "Actors Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold mb-0" style="color: var(--primary-color);">Actors Management</h1>
        <a asp-controller="Actor" asp-action="AddActor" class="btn btn-danger" style="background-color: var(--primary-color); border: none;">
            <i class="fas fa-plus me-2"></i>Add New Actor
        </a>
    </div>

    <div class="card shadow-sm" style="background-color: var(--card-bg); border: none;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" style="color: var(--text-primary);">
                    <thead style="background-color: var(--secondary-color);">
                        <tr>
                            <th style="width: 120px;">Profile</th>
                            <th>Name</th>
                            <th>Biography</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="Item border-bottom: 1px solid var(--secondary-color);">
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ProfilePictureURL))
                                    {
                                        <img src="@item.ProfilePictureURL" class="rounded-circle" style="width: 60px; height: 60px; object-fit: cover;" alt="Profile Picture">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle d-flex align-items-center justify-content-center"
                                             style="width: 60px; height: 60px; background-color: var(--secondary-color); color: var(--accent-color);">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    }
                                </td>
                                <td class="align-middle fw-bold">@item.FullName</td>
                                <td class="align-middle" style="max-width: 400px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    @item.Bio
                                </td>
                                <td class="align-middle">
                                    <div class="d-flex gap-2">
                                        <a asp-controller="actor" asp-action="EditActor" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="actor" asp-action="DeleteActor" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    /* Base Styles */
    .admin-actors-container {
        padding: 2rem;
        background-color: var(--dark-bg);
        min-height: 100vh;
    }

    /* Header Styles */
    .admin-header {
        margin-bottom: 2rem;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    h1 {
        color: var(--text-primary);
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }

    .btn-add-actor {
        background-color: var(--primary-color);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 4px;
        font-weight: 600;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-add-actor:hover {
            background-color: #c40812;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

    /* Search and Filter */
    .search-filter-bar {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .search-box {
        flex: 1;
        position: relative;
        max-width: 400px;
    }

        .search-box i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-secondary);
        }

        .search-box input {
            width: 100%;
            padding: 0.75rem 1rem 0.75rem 2.5rem;
            background-color: var(--card-bg);
            border: 1px solid var(--secondary-color);
            border-radius: 4px;
            color: var(--text-primary);
        }

    .filter-dropdown {
        position: relative;
        min-width: 180px;
    }

        .filter-dropdown select {
            width: 100%;
            padding: 0.75rem 1rem;
            background-color: var(--card-bg);
            border: 1px solid var(--secondary-color);
            border-radius: 4px;
            color: var(--text-primary);
            appearance: none;
            padding-right: 2.5rem;
        }

        .filter-dropdown i {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            color: var(--text-secondary);
        }

    /* Actors Grid */
    .actors-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .actor-card {
        background-color: var(--card-bg);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    
        .actor-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .actor-profile {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

        .actor-profile img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .actor-card:hover .actor-profile img {
        transform: scale(1.05);
    }

    .profile-placeholder {
        width: 100%;
        height: 100%;
        background-color: var(--secondary-color);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--accent-color);
        font-size: 3rem;
    }

    .actor-actions {
        position: absolute;
        bottom: 1rem;
        right: 1rem;
        display: flex;
        gap: 0.5rem;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .actor-card:hover .actor-actions {
        opacity: 1;
    }

    .action-btn {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .action-btn:hover {
            transform: scale(1.1);
        }

    .edit-btn:hover {
        background-color: #17a2b8;
    }

    .details-btn:hover {
        background-color: #28a745;
    }

    .delete-btn:hover {
        background-color: var(--primary-color);
    }

    /* Actor Info */
    .actor-info {
        padding: 1.5rem;
    }

        .actor-info h3 {
            color: var(--text-primary);
            margin: 0 0 0.75rem 0;
            font-size: 1.25rem;
            font-weight: 600;
        }

    .bio-truncate {
        color: var(--text-secondary);
        margin: 0 0 1rem 0;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1.4;
    }

    .actor-stats {
        display: flex;
        align-items: center;
        color: var(--text-secondary);
        font-size: 0.875rem;
    }

        .actor-stats i {
            margin-right: 0.5rem;
            color: var(--primary-color);
        }

    /* Pagination */
    .pagination-controls {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .pagination-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: var(--card-bg);
        border: 1px solid var(--secondary-color);
        color: var(--text-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .pagination-btn:hover {
            background-color: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

    .page-indicator {
        color: var(--text-secondary);
        font-size: 0.875rem;
    }

    tr:hover {
        color: #e50914 !important;
    }
  
</style>