@model ICollection<ActorDto>

@{
    ViewData["Title"] = "Actors Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link  href="~/css/ActorAdminIndex.css" rel="stylesheet"/>

<div class="container-fluid px-4 py-4 admin-actors-container">
    <div class="d-flex justify-content-between align-items-center mb-4 admin-header">
        <h1 class="display-6 fw-bold mb-0">Actors Management</h1>
        <a asp-controller="Actor" asp-action="AddActor" class="btn btn-danger btn-add-actor">
            <i class="fas fa-plus me-2"></i>Add New Actor
        </a>
    </div>

    <div class="card shadow-sm actor-table-card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 actor-list-table">
                    <thead>
                        <tr>
                            <th style="width: 120px;">Profile</th>
                            <th>Name</th>
                            <th>Biography</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ProfilePictureURL))
                                    {
                                        <img src="@item.ProfilePictureURL" class="rounded-circle actor-profile-img" alt="Profile Picture">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle d-flex align-items-center justify-content-center actor-profile-placeholder">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    }
                                </td>
                                <td class="align-middle fw-bold">@item.FullName</td>
                                <td class="align-middle actor-bio-cell">
                                    @item.Bio
                                </td>
                                <td class="align-middle">
                                    <div class="d-flex gap-2">
                                        <a asp-controller="actor" asp-action="EditActor" asp-route-id="@item.Id" class="btn btn-sm action-btn edit-btn">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="actor" asp-action="DeleteActor" asp-route-id="@item.Id" class="btn btn-sm action-btn delete-btn">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
